<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="controller.InventoryController">
    <top>
        <VBox spacing="10" style="-fx-background-color: #52B34B; -fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="30">
                <Label fx:id="levelLabel" text="Level: 1" textFill="white">
                    <font><Font name="System Bold" size="16.0" /></font>
                </Label>
                <Label fx:id="slotsLabel" text="Slots: 0 / 32" textFill="white">
                    <font><Font name="System Bold" size="16.0" /></font>
                </Label>
            </HBox>
            <VBox spacing="5">
                <Label fx:id="weightLabel" text="Weight: 0.0 / 50.0 kg" textFill="white">
                    <font><Font size="14.0" /></font>
                </Label>
            </VBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="itemTable" prefHeight="400.0" prefWidth="800.0">
            <columns>
                <TableColumn fx:id="typeColumn" prefWidth="100.0" text="Type" />
                <TableColumn fx:id="rarityColumn" prefWidth="100.0" text="Rarity" />
                <TableColumn fx:id="nameColumn" prefWidth="250.0" text="Name" />
                <TableColumn fx:id="weightColumn" prefWidth="100.0" text="Weight (kg)" />
                <TableColumn fx:id="quantityColumn" prefWidth="250.0" text="Quantity" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10" style="-fx-padding: 15; -fx-background-color: #ecf0f1;">
            <Button fx:id="removeButton" onAction="#removeItem" prefWidth="150.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Remove Selected Item" />
            <Button fx:id="sortByNameButton" onAction="#sortItemByName" prefWidth="100" style="-fx-padding: 5; -fx-background-color: #2AC1C7;
                                                                                     -fx-text-fill: white" text="Sort by Name" />
            <Button fx:id="sortByTypeButton" onAction="#sortItemByType" prefWidth="100" style="-fx-padding: 5; -fx-background-color: #2AC1C7;
                                                                                     -fx-text-fill: white" text="Sort by Type" />
            <Button fx:id="sortByWeightButton" onAction="#sortItemByWeight" prefWidth="100" style="-fx-padding: 5; -fx-background-color: #2AC1C7;
                                                                                     -fx-text-fill: white" text="Sort by Weight" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="saveButton" onAction="#saveInventory" prefWidth="50" style="-fx-background-color: #276CF5; -fx-text-fill: white;" text="Save" />
            <Button fx:id="loadButton" onAction="#loadInventory" prefWidth="50" style="-fx-background-color: #276CF5; -fx-text-fill: white;" text="Load" />
        </HBox>
    </bottom>

</BorderPane>
