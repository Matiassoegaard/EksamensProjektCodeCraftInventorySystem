<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.InventoryController"
            prefHeight="600.0" prefWidth="800.0">
    <top>
        <VBox spacing="10" style="-fx-background-color: #52B34B; -fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="30">
                <Label fx:id="levelLabel" text="Level: 1" textFill="white">
                    <font><Font name="System Bold" size="16.0"/></font>
                </Label>
                <Label fx:id="slotsLabel" text="Slots: 0 / 32" textFill="white">
                    <font><Font name="System Bold" size="16.0"/></font>
                </Label>
            </HBox>
            <VBox spacing="5">
                <Label fx:id="weightLabel" text="Weight: 0.0 / 50.0 kg" textFill="white">
                    <font><Font size="14.0"/></font>
                </Label>
            </VBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="itemTable" prefHeight="400.0" prefWidth="800.0">
            <columns>
                <TableColumn fx:id="typeColumn" text="Type" prefWidth="100.0"/>
                <TableColumn fx:id="rarityColumn" text="Rarity" prefWidth="100.0"/>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="250.0"/>
                <TableColumn fx:id="weightColumn" text="Weight (kg)" prefWidth="100.0"/>
                <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="250.0"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 15; -fx-background-color: #ecf0f1;">
            <Button fx:id="removeButton" text="Remove Selected Item" onAction="#removeItem"
                    prefWidth="150.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="saveButton" text="Save" onAction="#saveInventory"
                    prefWidth="100.0" style="-fx-background-color: #276CF5; -fx-text-fill: white;"/>
            <Button fx:id="loadButton" text="Load" onAction="#loadInventory"
                    prefWidth="100.0" style="-fx-background-color: #276CF5; -fx-text-fill: white;"/>
        </HBox>
    </bottom>

</BorderPane>

